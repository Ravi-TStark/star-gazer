<Window x:Name="sGazer" x:Class="Star_Gazer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Star_Gazer"
        mc:Ignorable="d"
        Title="Star Gazer" Height="450" Width="800" WindowState="Maximized" ResizeMode="NoResize" Topmost="True" WindowStyle="None" Background="#00000000" AllowsTransparency="True" PreviewKeyDown="sGazer_PreviewKeyDown" SizeChanged="sGazer_SizeChanged">
    <Grid x:Name="grid1" Background="#BF000000">
        <TextBox x:Name="textBox" Margin="10,125,10,265" SelectionOpacity="0.5" BorderThickness="2" Foreground="White" Background="#E5282828" SelectionBrush="#FF686868" BorderBrush="#E5292828" TextAlignment="Center" FontWeight="Thin" FontStretch="SemiCondensed" TextOptions.TextHintingMode="Animated" FontSize="25" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Width="780" VerticalAlignment="Center" Height="60" LostFocus="textBox_LostFocus" TextChanged="textBox_TextChanged" KeyDown="textBox_KeyDown">
            <TextBox.Effect>
                <DropShadowEffect ShadowDepth="5" BlurRadius="10" Opacity="0.60" Direction="270" Color="#FF1F1F1F"/>
            </TextBox.Effect>
        </TextBox>
        <Label x:Name="label" Content="Search" HorizontalAlignment="Center" Margin="10,125,10,265" VerticalAlignment="Center" Width="780" Height="60" Background="#00000000" Foreground="#E5727272" FontSize="28" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseDown="label_MouseDown"/>
        <ListBox x:Name="listBox" Height="246" Margin="10,193,10,11"  Width="780" Background="#E5282828" Foreground="White" BorderBrush="#FF2B2B2B" Visibility="Collapsed" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" KeyDown="listBox_KeyDown">
            <ListBox.Effect>
                <DropShadowEffect ShadowDepth="5" BlurRadius="10" Opacity="0.60" Direction="270" Color="#FF1F1F1F"/>
            </ListBox.Effect>
        </ListBox>

    </Grid>
</Window>
